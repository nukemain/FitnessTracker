<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.FitnessTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Dark theme colors from values-night/colors.xml -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Style for EditTexts in dark mode -->
        <item name="editTextStyle">@style/CustomEditTextNight</item>
    </style>

    <style name="CustomEditTextNight" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
